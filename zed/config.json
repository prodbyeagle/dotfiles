// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "use_system_path_prompts": false,
  "use_system_prompts": false,
  "disable_ai": true,
  "git": {
    "blame": {
      "show_avatar": false
    },
    "inline_blame": {
      "padding": 7
    }
  },
  "active_pane_modifiers": {
    "border_size": 0.0,
    "inactive_opacity": 0.3
  },
  "bottom_dock_layout": "full",
  "preview_tabs": {
    "enabled": false
  },
  "tabs": {
    "file_icons": false,
    "close_position": "right"
  },
  "tab_bar": {
    "show": false
  },
  "title_bar": {
    "show_onboarding_banner": true,
    "show_user_picture": false,
    "show_sign_in": false,
    "show_branch_name": true,
    "show_project_items": true,
    "show_branch_icon": false
  },
  "drop_target_size": 0.2,
  "image_viewer": {
    "unit": "binary"
  },
  "colorize_brackets": true,
  "inlay_hints": {
    "enabled": false
  },
  "indent_guides": {
    "background_coloring": "disabled",
    "coloring": "indent_aware",
    "active_line_width": 2,
    "line_width": 0,
    "enabled": true
  },
  "soft_wrap": "none",
  "toolbar": {
    "code_actions": false,
    "agent_review": false,
    "selections_menu": true,
    "quick_actions": false,
    "breadcrumbs": false
  },
  "scrollbar": {
    "axes": {
      "horizontal": false,
      "vertical": true
    },
    "show": "auto"
  },
  "relative_line_numbers": "disabled",
  "gutter": {
    "min_line_number_digits": 4,
    "runnables": true,
    "line_numbers": false
  },
  "hover_popover_delay": 100,
  "scroll_beyond_last_line": "off",
  "redact_private_values": true,
  "buffer_line_height": {
    "custom": 2.299999952316284
  },
  "collaboration_panel": {
    "dock": "right"
  },
  "terminal": {
    "font_size": 13.0,
    "dock": "bottom"
  },
  "agent_servers": {
    "your_agent": {
      "type": "custom",
      "command": "path_to_executable",
      "args": [],
      "env": {}
    }
  },
  "autosave": {
    "after_delay": {
      "milliseconds": 200
    }
  },
  "buffer_font_family": "Geist Mono",
  "prettier": {
    "allowed": false
  },
  "ui_font_weight": 400.0,
  "agent_ui_font_size": 14.0,
  "ui_font_family": "Geist Mono",
  "icon_theme": {
    "mode": "light",
    "light": "Zed (Default)",
    "dark": "Zed (Default)"
  },
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "base_keymap": "VSCode",
  "ui_font_size": 20.0,
  "buffer_font_size": 15,
  "theme": {
    "mode": "dark",
    "light": "Nord Light",
    "dark": "Zedokai Darker (Filter Ristretto)"
  },
  "lsp": {
    "eslint": {
      "settings": {
        "onIgnoredFiles": "off"
      }
    }
  }
}
